{
  "manifest_version": 3,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "name": "ChatGPT Auto Voice Reader",
  "version": "1.0",
  "description": "Automatically click the read outload button on ChatGPT.",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Auto read ChatGPT"
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-auto-voice-reader@example.com",
      "strict_min_version": "109.0"
    }
  }
}